@model QlySanPham.Models.Product

@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
}

<div class="container mt-4">
    <h2 class="mb-3">@ViewData["Title"]</h2>
    <hr />

    <form asp-action="Edit" method="post" class="row g-3">
        @* Ẩn ID để gửi khi submit *@
        <input type="hidden" asp-for="Id" />

        <div class="col-md-6">
            <label asp-for="Name" class="form-label fw-semibold"></label>
            <input asp-for="Name" class="form-control" placeholder="Nhập tên sản phẩm..." />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="Price" class="form-label fw-semibold"></label>
            <input asp-for="Price" type="number" min="0" step="1000" class="form-control" placeholder="Nhập giá..." />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="Stock" class="form-label fw-semibold"></label>
            <input asp-for="Stock" type="number" min="0" class="form-control" placeholder="Số lượng tồn kho..." />
            <span asp-validation-for="Stock" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label asp-for="Description" class="form-label fw-semibold"></label>
            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Mô tả sản phẩm..."></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="col-12 mt-3">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i> Cập nhật
            </button>
            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}